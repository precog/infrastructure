server {
  port = 30040
  sslPort = 30041
  sslEnable = false 

  log {
    level = "info"
    console = true
    filename = "/var/log/reportgrid/billing-v1.server.log"
    roll = "daily"
    use_parents = false
  }
}

services {
  billing {
    v1 {
      log {
        level = "debug"
        console = true
        filename = "/var/log/reportgrid/billing-v1.log"
        roll = "daily"
        use_parents = false
      }

      requestLog {
        enabled = false
        file = "/var/log/reportgrid/billing-v1.request.log"
        roll = "daily"
        fields = "date time c-ip cs-method cs-uri-stem cs-uri-query sc-status"
      }
      
      accounts {
        credits {
          developer = 10000
          mixpanel = 100000
        }
      }
      
      mongo {
        database = "accounts_v1"
        collection = "accounts"
        servers = ["devmongo01.reportgrid.com:27017"]
      }
      
      usageService {
        baseUrl = "http://localhost:80/services/analytics/v1/"
      }
#
# Sandbox braintree config
#
